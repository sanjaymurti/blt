
<% @billable_hours.each do | b | %>

<div class="billable-card">
	<div class="project-color" style="background: <%= b.project.color %>"></div>
	

        <div class="card-info" id="hour-info-<%= b.id %>">
          <%= form_for(b) do |f| %>
            <%= f.text_area :description %>

            <li><%= f.label "Start:" %> <%= f.time_field :start %></li>
            <li><%= f.label "End: " %> <%= f.time_field :end %></li>
            <div style="text-align: right; padding-right: 6px;">
              <%= f.submit "Save" %>
              <input type="button" value="Delete">
            </div>
            </ul>
          <% end %>
        </div>


	</div>

<% end %>

















<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Start</th>
      <th>End</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @billable_hours.each do |billable_hour| %>
      <tr>
        <td><%= billable_hour.description %></td>
        <td><%= billable_hour.start %></td>
        <td><%= billable_hour.end %></td>
        <td><%= billable_hour.project %></td>
        <td><%= link_to 'Show', billable_hour %></td>
        <td><%= link_to 'Edit', edit_billable_hour_path(billable_hour) %></td>
        <td><%= link_to 'Destroy', billable_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
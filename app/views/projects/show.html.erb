<% provide(:title, ' | All Projects') %>

<div id="project-page">
	<h2><%= @project.name %></h2>
	<p><%= @project.description %></p>
		<div id="task-list">
			<h3>Tasks</h3>
			<ol>
				<% @tasks.each do |t| %>
					<li id="task-<%= t.id %>"><%= t.task %><input class="checkbox" id="<%= t.id %>" type="checkbox"/></li>
				<% end %>
					<li id="add-task-item">
						<%= form_for(@task) do |f| %>
							<%= f.hidden_field :project_id, :value => @project.id %>
							<%= f.text_area :task %>
						<% end %>
					</li>
			</ol>
		</div>


		<div class="clearfix"></div>

</div>

